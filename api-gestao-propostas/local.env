# Configuração local para desenvolvimento (Docker)
# Copie para .env ou use como referência

APP_NAME="API Gestão Propostas"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# ------------------------------------------------
# Banco de Dados - PostgreSQL
# ------------------------------------------------
# Docker: use "postgres" como host (nome do serviço)
# Local (fora do Docker): use "127.0.0.1"
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=propostas_db
DB_USERNAME=propostas_user
DB_PASSWORD=propostas_pass
DB_CHARSET=utf8

# ------------------------------------------------
# Redis
# ------------------------------------------------
# Docker: use "redis" como host (nome do serviço)
# Local (fora do Docker): use "127.0.0.1"
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Cache e sessões via Redis
CACHE_STORE=redis
CACHE_PREFIX=propostas_
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
